  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "isolatedModules": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./server/dist"
  },
  "include": ["server/src/**/*.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true 
  }
}
